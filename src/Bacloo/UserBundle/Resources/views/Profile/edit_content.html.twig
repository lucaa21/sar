 
{% block User_body %}
<div class="modal-dialog">
	<div class="modal-content modal-lg">
		<div class="modal-header">
			<span style="font-size:25px; font-weight:bold; color:#337ab7">
				Votre Profil
			</span>
		</div>
		<div class="modal-body">
			{% if form.nom.vars.value is empty %}
				<div class="alert alert-danger">
				  <strong>Attention!</strong> Veuillez compléter votre profil afin de commencer à recevoir des leads.<br>* champs obligatoires
				</div>	
			{% endif %}
			<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
			 <fieldset> 
			{{ form_errors(form) }}	 
				{# Les erreurs générales du formulaire. #}
				{{ form_errors(form) }}

			<div class="row clearfix">

				<div class="form-group">
				  <div class="col-md-12">
					<div class="form-group">
					  <div class="col-md-12">  
						<span><a type="button" class="btn btn-success btn-xs" href="{{ path('bacloocrm_categorie') }}"><i class="fa fa-plus"></i> Ajouter des domaines de compétence</a></span>(*)                   
						<br>{{ form_widget(form.tags, { 'attr' : { 'class' : 'form-control' ,'rows' : '5'} })  }}
					  </div>
					</div>				 
				  </div>
				</div>
				<br><br><br>
				<br><br><br>
				<br><br>
				<div class="form-group">
				  <div class="col-md-12">
					<div class="input-group">
					  <span class="input-group-addon large">* Départements visés</span>
					  {{ form_widget(form.cp, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'ex : 92,93,95'}})  }}
					</div> 
					<p class="help-block">Listez, en les séparant d'une virgule sur 2 chiffres, les codes postaux des régions qui vous intéressent.</p>	
				  </div>
				</div>
			</div>

			<br>
											
			<div class="row clearfix col-md-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="col-md-6 column">		
							<div class="form-group">
							  <div class="col-md-12">
								<div class="input-group">
								  <span class="input-group-addon large">* Nom d'utilisateur</span>
								  {{ form_widget(form.username, { 'attr' : { 'class' : 'form-control' } })  }}
								</div>    
							  </div>
							  {{ form_errors(form.username) }}
							</div>
						</div>									
						<div class="col-md-6 column">
							<div class="form-group">
							  <div class="col-md-12">
								<div class="input-group">
								  <span class="input-group-addon large">* Adresse email</span>
								  {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control' } })  }}
								</div>    
							  </div>
							 {{ form_errors(form.email) }}
							</div>
						</div>
						<br><br>
						<div class="col-md-6">
							<div class="form-group">
							  <div class="col-md-12">
								<div class="input-group">
								  <span class="input-group-addon large">Mot de passe</span>
								  {{ form_widget(form.current_password, { 'attr' : { 'class' : 'form-control' } })  }}
								</div>    
							  </div>
							 <span style="color:red; font-weight:bold;">Renseignez le mot de passe avant d'enregistrer</span>
							</div>
						</div>
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="col-md-12">
							<div class="form-group">
							  <div class="col-md-12">
								<div class="input-group">
								  <span class="input-group-addon large">Nom de votre société</span>
								  {{ form_widget(form.usernomsociete, { 'attr' : { 'class' : 'form-control' } })  }}
								 <div class="hidden">{{ form_widget(form.usersociete, { 'attr' : { 'class' : 'form-control' } })  }}</div>
								</div> 
							  </div>
							</div>
						</div>
						<br><br>
						<div class="col-md-6 column">		
							<div class="form-group">
							  <div class="col-md-12">
								<div class="input-group">
								  <span class="input-group-addon large">Nom</span>
								  {{ form_widget(form.nom, { 'attr' : { 'class' : 'form-control' } })  }}
								</div>    
							  </div>
							  {{ form_errors(form.nom) }} 
							</div>
						</div>									
						<div class="col-md-6 column">
							<div class="form-group">
							  <div class="col-md-12">
								<div class="input-group">
								  <span class="input-group-addon large">Prénom</span>
								  {{ form_widget(form.prenom, { 'attr' : { 'class' : 'form-control' } })  }}
								</div>    
							  </div>
							  {{ form_errors(form.prenom) }} 
							</div>		
						</div>
					<br><br>

						<div class="col-md-12">
							<div class="form-group">
							  <div class="col-md-12">
								<div class="input-group">
								  <span class="input-group-addon large">Adresse</span>
								  {{ form_widget(form.adresse1, { 'attr' : { 'class' : 'form-control' } })  }}
								</div>    
							  </div>
							  {{ form_errors(form.adresse1) }} 
							</div>
						</div>
						<br><br>
						<div class="col-md-6 column">		
							<div class="form-group">
							  <div class="col-md-12">
								<div class="input-group">
								  <span class="input-group-addon large">CP</span>
								  {{ form_widget(form.cpuser, { 'attr' : { 'class' : 'form-control' } })  }}
								</div>    
							  </div>
							  {{ form_errors(form.nom) }} 
							</div>
						</div>									
						<div class="col-md-6 column">
							<div class="form-group">
							  <div class="col-md-12">
								<div class="input-group">
								  <span class="input-group-addon large">Ville</span>
								  {{ form_widget(form.ville, { 'attr' : { 'class' : 'form-control' } })  }}
								</div>    
							  </div>
							  {{ form_errors(form.ville) }} 
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-6 column">
					<div class="form-group">
					  <div class="col-md-12">
						<div class="input-group">
						  <span class="input-group-addon large">Telephone</span>
						  {{ form_widget(form.telephone, { 'attr' : { 'class' : 'form-control' } })  }}
						</div>    
					  </div>
					  {{ form_errors(form.telephone) }} 
					</div>
				</div>
				<div class="col-md-6 column">
					<div class="form-group">
					  <div class="col-md-12">
						<div class="input-group">
						  <span class="input-group-addon large">Activité</span>
						  {{ form_widget(form.activite, { 'attr' : { 'class' : 'form-control' } })  }}
						</div>    
					  </div>
					 {{ form_errors(form.prenom) }}  
					</div>		
				</div>
			<br><br><br>
			</div>	
			{{ form_row(form._token) }}	
			<div>
				<input type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
			</div>
		 </fieldset>
		</form>	
	</div>
</div>

{% endblock %}