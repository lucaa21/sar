{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
	<h1 class="brand-heading">{{ societe }}</h1>
	<p class="intro-text">{{ text }}</p>
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
<div class="container-full">
      <div class="row">      
        <div class="col-lg-12 text-center v-center"> 
			<form role="form" class="col-lg-12" action="{{ path("fos_user_security_check") }}" method="post">
				<fieldset>
					<div class="form-group">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
						<div class="input-group input-group-lg col-sm-offset-4 col-sm-4">
						  <span class="input-group-addon info"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
						  <input class="center-block form-control input-lg" type="text" id="username" name="_username" value="{{ last_username }}" required="required" , placeholder="Nom d'utilisateur"/>
						</div>   
					</div>
					<!-- Prepended text-->
					<div class="form-group">
						<div class="input-group input-group-lg col-sm-offset-4 col-sm-4">
						  <span class="input-group-addon info"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
						  <input class="center-block form-control input-lg" type="password" id="password" name="_password" required="required" placeholder="Mot de passe"/>
						</div>
						<br><input type="checkbox" id="remember_me" name="_remember_me" value="on" />
						<label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>   
						<br><label for="forgot"><a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</label>
					</div>
					<!-- Button -->
					<div class="form-group">
					  <label class="col-md-4 control-label" for="singlebutton"></label>
					  <div class="col-md-4">
						<button id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-default btn-lg">Se connecter</button>
					  </div>
					</div>
				</fieldset>
			</form>
        </div>       
      </div> <!-- /row --> 
  	
</div> <!-- /container full -->


{% endblock fos_user_content %}
