<div class="container-full">
      <div class="row">      
        <div class="col-lg-12 text-center v-center">        
          <h1>Bacloo</h1>
          <p class="lead">Inscrivez-vous pour booster votre prospection commerciale</p>          
          <br> 
			<form  role="form" class="form-horizontal" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
				<fieldset>

						<div class="form-group">
						  <div class="input-group input-group-lg col-sm-offset-4 col-sm-4">
		
							  <span class="input-group-addon info info"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
							  {{ form_widget(form.username, { 'attr' : { 'class' : 'center-block form-control input-lg', 'placeholder' : 'Nom d\'utilisateur'  } })  }}
 
						  </div>
						</div>

						<div class="form-group">
						  <div class="input-group input-group-lg col-sm-offset-4 col-sm-4">

							  <span class="input-group-addon info"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
							  {{ form_widget(form.email, { 'attr' : { 'class' : 'center-block form-control input-lg', 'placeholder' : 'E-mail' } })  }}
  
						  </div>
						</div>    

						<div class="form-group">
						  <div class="input-group input-group-lg col-sm-offset-4 col-sm-4">

							  <span class="input-group-addon info"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
							  {{ form_widget(form.plainPassword.first, { 'attr' : { 'class' : 'center-block form-control input-lg', 'placeholder' : 'Mot de passe'  } })  }}
   
						  </div>
						</div> 

						<div class="form-group">
						  <div class="input-group input-group-lg col-sm-offset-4 col-sm-4">

							  <span class="input-group-addon info"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
							  {{ form_widget(form.plainPassword.second, { 'attr' : { 'class' : 'center-block form-control input-lg', 'placeholder' : 'Retapez votre mot de passe'  } })  }}
    
						  </div>
						</div>

						{{ form_row(form._token) }}
						<div>
							<br><button id="_submit" name="_submit" class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-lg btn-primary active">S'enregistrer</button>
						</div>
		
				</fieldset>
			</form>
        </div>       
      </div> <!-- /row --> 
  	<br>
</div> <!-- /container full -->
